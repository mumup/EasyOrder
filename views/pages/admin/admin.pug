doctype
html
    head
        title #{title}
        meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        include ../../includes/head
        link(href="/css/admin.css" rel="stylesheet")
    body
        main
            block center
                div.row.content-wrap
                    include ../../includes/tool-bar
                    div.main-wrap.col.s10
                        div.admin-info.container
                            div.collection
                                a.collection-item(href='#!')
                                    span.badge #{userCount}
                                    | 当前用户数
                                a.collection-item(href='#!')
                                    span.badge #{menuNum}
                                    | 最新菜单号
                                a.collection-item(href='#!')
                                    span.new.badge #{OrderNum}
                                    | 最新订单数
                                a.collection-item(href='#!')
                                    case status
                                        when 0
                                          span(data-badge-caption="进行中").new.badge.blue
                                        when 1
                                          span(data-badge-caption="已截止").new.badge.blue
                                        default
                                          span(data-badge-caption="未发布").new.badge.blue
                                    | 订单状态
                            div.container.center
                                  a(data-menunum = menuNum).btn.stopOrder 停止当前订餐

include ../../includes/footjs
    script(src="/js/admin.js")
